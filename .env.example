# ========================================
# AGDevX OpenAPI MCP Server Configuration
# ========================================
# Copy this file to .env and update with your values

# ====================
# REQUIRED SETTINGS
# ====================

# Environment names (comma-separated)
# Example single: ENVIRONMENTS=prod
# Example multiple: ENVIRONMENTS=dev,qa,prod
ENVIRONMENTS=qa,prod

# Default environment (uses first if not specified)
DEFAULT_ENVIRONMENT=qa

# OpenAPI spec URL for each environment
# Format: API_SPEC_URL_{ENVIRONMENT_NAME_UPPERCASE}
# This URL is ONLY used to fetch the OpenAPI specification document
# API_SPEC_URL_DEV=https://dev-api.example.com/openapi/v1.json
API_SPEC_URL_QA=https://qa-api.example.com/openapi/v1.json
API_SPEC_URL_PROD=https://api.example.com/openapi/v1.json

# Base API URL for each environment (REQUIRED)
# Format: API_BASE_URL_{ENVIRONMENT_NAME_UPPERCASE}
# This URL is used for all API calls made by the MCP server tools
# API_BASE_URL_DEV=https://dev-api.example.com
API_BASE_URL_QA=https://qa-api.example.com
API_BASE_URL_PROD=https://api.example.com

# ====================
# OPTIONAL SETTINGS
# ====================

# --- Server Configuration ---
MCP_SERVER_NAME=agdevx-openapi-mcp-server
PORT=3000
API_TIMEOUT=30000

# --- Rate Limiting ---
# Protects APIs from being overwhelmed with requests
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# --- Spec Management ---
# Auto-refresh interval in milliseconds (0 = disabled)
SPEC_REFRESH_INTERVAL=0

# --- Debugging & Logging ---
MCP_VERBOSE=false

# --- Security ---
# TLS certificate verification (default: enabled)
# Set to '0' to disable for development with self-signed certificates
# WARNING: Only disable in development environments, never in production
# NODE_TLS_REJECT_UNAUTHORIZED=0
